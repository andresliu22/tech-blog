<div class="text-center">

    <div class="modal-body">
        <div class="form-group">
            <label for="post-title" class="col-form-label">Title:</label>
            <input class="form-control" id="post-title" value="{{title}}"></input>
        </div>
        <div class="form-group">
            <label for="post-content" class="col-form-label">Content:</label>
            <textarea class="form-control" id="post-content">{{content}}</textarea>
        </div>
        <div class="form-group" style="margin-top: 20px;">
            <button type="button" class="btn btn-primary" id="update-post" data-id="{{id}}">Update Post</button>
            <button type="button" class="btn btn-danger" id="delete-post" data-id="{{id}}">Delete Post</button>
        </div>
        
    </div>

</div>

<script src="/js/post.js"></script>
